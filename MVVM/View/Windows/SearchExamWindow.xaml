<Window x:Class="ZabgcExamsDesktop.MVVM.View.Windows.SearchExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZabgcExamsDesktop.MVVM.View.Windows"
        mc:Ignorable="d"
       Title="Расписание экзаменов" Height="450" Width="1100" 
    WindowStartupLocation="CenterScreen"
    Background="#323a47"
    ResizeMode="CanMinimize"
    WindowStyle="None"
        >
    <Grid MouseDown="ToolBar_MouseDown">
        <Image x:Name="closeBtn" Grid.Row="0" Source="/Icons/Знак_закрыть.png"  Panel.ZIndex="10" MouseDown="closeBtn_MouseDown" RenderOptions.BitmapScalingMode="HighQuality" Margin="1057,4,4,411"/>
        <Image x:Name="colapseBtn"  Grid.Row="0" Source="/Icons/Знак_свернуть.png" Panel.ZIndex="10" MouseDown="colapseBtn_MouseDown" RenderOptions.BitmapScalingMode="HighQuality" Margin="1013,4,47,411" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Frame Source="/MVVM/View/Pages/SearchExamPage.xaml" x:Name="mainFrame" Panel.ZIndex="1" Margin="-2,-5,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
