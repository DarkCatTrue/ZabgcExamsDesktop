<Window x:Class="ZabgcExamsDesktop.MVVM.View.Windows.SearchExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZabgcExamsDesktop.MVVM.View.Windows"
        mc:Ignorable="d"
       Title="Расписание экзаменов" Height="1080" Width="1920" 
    WindowStartupLocation="CenterScreen"
    Background="#323a47"
    ResizeMode="CanMinimize"
    WindowStyle="None"
    WindowState="Maximized"
        >
    <Grid MouseDown="ToolBar_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="170"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="closeBtn" Grid.Row="1" Source="/Icons/Знак_закрыть.png"  Panel.ZIndex="10" MouseDown="closeBtn_MouseDown" RenderOptions.BitmapScalingMode="HighQuality" Grid.Column="1" Height="50" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 0 3 0" />
        <Image x:Name="colapseBtn"  Grid.Row="1" Source="/Icons/Знак_свернуть.png" Panel.ZIndex="10" MouseDown="colapseBtn_MouseDown" RenderOptions.BitmapScalingMode="HighQuality" Grid.Column="1" Height="50" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Frame Source="/MVVM/View/Pages/SearchExamPage.xaml" Grid.ColumnSpan="2" x:Name="mainFrame" Panel.ZIndex="1" Margin="-2,-5,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
