<Window x:Class="ZabgcExamsDesktop.MVVM.View.Windows.GroupAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZabgcExamsDesktop.MVVM.View.Windows"
        mc:Ignorable="d"
        Title="Добавление группы" Height="310" Width="280"
        Background="#323a47"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        >
    <Grid MouseDown="ToolBar_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Название группы" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Text="{Binding EnterGroup}" Height="30" Width="200" Foreground="White" HorizontalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Отделение" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            <ComboBox ItemsSource="{Binding Departments}" SelectedValue="{Binding SelectedDepartmentId}" SelectedValuePath="IdDepartment" DisplayMemberPath="NameOfDepartment" Margin="0 10 0 0" Width="210"/>
            <Button Content="Добавить" Margin="0 30 0 0" Command="{Binding AddNewGroupCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Image x:Name="colapseBtn" Source="/Icons/Знак_свернуть.png" Panel.ZIndex="10" MouseDown="colapseBtn_MouseDown" RenderOptions.BitmapScalingMode="HighQuality" Height="30" Margin="0 0 5 0"/>
            <Image x:Name="closeBtn" Source="/Icons/Знак_закрыть.png"  Panel.ZIndex="10" MouseDown="closeBtn_MouseDown" RenderOptions.BitmapScalingMode="HighQuality" Height="30" Margin="0 0 2 0"/>
        </StackPanel>
    </Grid>
</Window>
