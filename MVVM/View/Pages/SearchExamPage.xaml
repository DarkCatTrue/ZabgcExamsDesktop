<Page x:Class="ZabgcExamsDesktop.MVVM.View.Pages.SearchExamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZabgcExamsDesktop.MVVM.View.Pages" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SearchExamPage"
      Background="#323a47"
      >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!--<converters:TeachersConverter x:Key="TeachersConverter"/>-->
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="EditDataBaseBtn" Grid.ColumnSpan="2" Grid.Row="1" Content="Редактирование базы данных" Command="{Binding EditDataBaseCommand}" Height="Auto"/>
        <Button Name="CreateSchedule" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Command="{Binding CreateExamCommand}" Content="Добавить экзамен" Height="Auto"/>
        <Button Name="CreateResult" Grid.Column="4" Grid.Row="1" Command="{Binding CreateResultCommand}" Content="Печать отчёта" Height="Auto"/>
        <ComboBox Grid.Column="0" Grid.Row="3" x:Name="DepartmentsComboBox" ItemsSource="{Binding Department, Mode = OneWay}" DisplayMemberPath="NameOfDepartment" SelectedItem="{Binding SelectedDepartment, Mode=TwoWay}"/>
        <ComboBox Grid.Column="1" Grid.Row="3" x:Name="GroupsComboBox" IsEditable="True" ItemsSource="{Binding FilteredGroups, Mode = OneWay}" DisplayMemberPath="NameOfGroup" SelectedValuePath="IdGroup" SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"/>
        <ComboBox Grid.Row="3" Grid.Column="2" IsEditable="True" ItemsSource="{Binding Teacher, Mode=OneWay}" DisplayMemberPath="FullName" SelectedValuePath="IdTeacher" SelectedItem="{Binding SelectedTeacher, Mode=TwoWay}"/>
        <ComboBox Grid.Row="3" Grid.Column="3" IsEditable="True" ItemsSource="{Binding Audience, Mode=OneWay}" DisplayMemberPath="NumberAudience" SelectedValuePath="IdAudience" SelectedItem="{Binding SelectedAudience, Mode=TwoWay}"/>
        <TextBlock Text="Отделение" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource GlobalTextBlockStyle}" />
        <TextBlock Text="Группа" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource GlobalTextBlockStyle}" />
        <TextBlock Text="Преподаватель" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource GlobalTextBlockStyle}" />
        <TextBlock Text="Аудитория" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource GlobalTextBlockStyle}" />
        <Button Name="SearchBtn" Grid.Column="4" Grid.Row="2" Height="30" Content="Поиск" Command="{Binding SearchCommand}"/>
        <Button Name="ClearSearchBtn" Grid.Column="4" Grid.Row="3" Height="30" Content="Очистить поиск" Command="{Binding ClearSearchCommand}"/>
        <DataGrid x:Name="ScheduleGrid" Grid.ColumnSpan="5" Grid.Row="4" 
          ItemsSource="{Binding SearchResults}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True"
>
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Отделение" Binding="{Binding DepartmentName}"/>
                
                <DataGridTextColumn Header="Группа" Binding="{Binding GroupName}"/>
                
                <DataGridTextColumn Header="Консультация/Экзамен" Binding="{Binding TypeOfLessonName}"/>
                
                <DataGridTextColumn Header="Тип экзамена" Binding="{Binding TypeOfExamName}"/>
                                
                <DataGridTextColumn Header="Дисциплина" Binding="{Binding DisciplineName}"/>
                
                <DataGridTextColumn Header="Преподаватели" Binding="{Binding TeachersDisplay}"/>
                
                <DataGridTextColumn Header="Аудитория" Binding="{Binding AudienceNumber}"/>
                
                <DataGridTextColumn Header="Дата/время" 
                       Binding="{Binding DateEvent, StringFormat='{} {0:dd.MM.yyyy HH:mm}'}"/>
                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Удалить" 
                                Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Margin="2" Padding="5,2" Width="Auto"
                                Background="#FFf44336" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
