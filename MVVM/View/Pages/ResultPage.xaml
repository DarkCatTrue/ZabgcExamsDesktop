<Page x:Class="ZabgcExamsDesktop.MVVM.View.Pages.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZabgcExamsDesktop.MVVM.View.Pages" xmlns:converters="clr-namespace:ZabgcExamsDesktop.MVVM.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ResultPage"
      Background="#323a47">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:TeachersConverter x:Key="TeachersConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="1" Grid.ColumnSpan="6" Content="Вернуться назад" Command="{Binding BackToSearch}" Height="Auto"/>
        <ComboBox x:Name="DepartmentComboBox" Grid.Row="2" ItemsSource="{Binding Department}" SelectedItem="{Binding SelectedDepartment}" DisplayMemberPath="NameOfDepartment" Height="Auto"/>
        <ListBox x:Name="GroupsListBox" Grid.Row="2" SelectionMode="Multiple" Grid.Column="1" ItemsSource="{Binding FilteredGroups}" SelectedItem="{Binding SelectedGroup}" Height="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding NameOfGroup}"
                    IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ComboBox 
            Grid.Row="2"
            Grid.Column="2"
            SelectedItem="{Binding SelectedResult}"
            ItemsSource="{Binding ResultItems}">
        </ComboBox>
        
        <Button x:Name="SearchBtn" 
                Grid.Row="2" 
                Grid.Column="3"
                Content="Поиск" 
                Click="SearchBtn_Click">
        </Button>

        <Button 
            Grid.Row="2"
            Grid.Column="4" 
            Content="Сохранить в PDF" 
            Command="{Binding SaveToPDFCommand}" 
            IsEnabled="{Binding CanSaveToPdf}">
        </Button>

        <DataGrid
            x:Name="GridPrint"
            Grid.Row="3" 
            Grid.ColumnSpan="5"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding SearchResults}">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Отделение"
                Binding="{Binding IdGroupNavigation.IdDepartmentNavigation.NameOfDepartment}"/>

                <DataGridTextColumn Header="Группа"
                Binding="{Binding IdGroupNavigation.NameOfGroup, UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn Header="Консультация/Экзамен" 
               Binding="{Binding IdTypeOfLessonNavigation.TypeOfLesson1}"/>

                <DataGridTextColumn Header="Тип экзамена" 
               Binding="{Binding IdTypeOfExamNavigation.TypeOfExam1}"/>

                <DataGridTextColumn Header="Квалификация" 
               Binding="{Binding IdQualificationNavigation.NameQualification}"/>

                <DataGridTextColumn Header="Дисциплина" 
               Binding="{Binding IdDisciplineNavigation.NameDiscipline}"/>

                <DataGridTextColumn Header="Преподаватели" 
               Binding="{Binding IdTeachers, Converter={StaticResource TeachersConverter}}"/>

                <DataGridTextColumn Header="Аудитория" 
               Binding="{Binding IdAudienceNavigation.NumberAudience}"/>

                <DataGridTextColumn Header="Дата/время" 
               Binding="{Binding DateEvent, StringFormat='{} {0:dd.MM.yyyy HH:mm}'}"/>
                <DataGridTemplateColumn Header="Действия" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="DelFromDataGridBtn" Content="Удалить из отчёта" 
                                Click="DelFromDataGridBtn_Click"
                                Margin="2" Padding="5,2" Width="Auto"
                                Background="#FFf44336" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid> 
                  
            
    </Grid>
</Page>
